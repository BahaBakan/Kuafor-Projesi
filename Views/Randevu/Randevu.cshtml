@model KuaforProjesi.ViewModels.RandevuViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Randevu Al</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<body class="bg-light">

    <div class="container">
        <h2 class="text-center mb-4">Randevu Al</h2>
        <form asp-action="Randevu" method="post">
            <!-- İşlem Seçimi -->
            <div class="mb-3">
                <label asp-for="IslemId" class="form-label">İşlem Seç</label>
                <select asp-for="IslemId" class="form-select" required>
                    <option value="">İşlem Seçin</option>

                    @foreach (var islem in Model.Islemler)
                    {
                        <option value="@islem.IslemId">@islem.IslemAdi</option>
                    }

                </select>
            </div>

            <!-- Çalışan Seçimi -->
            <div class="mb-3">
                <label asp-for="CalisanId" class="form-label">Çalışan Seç</label>
                <select asp-for="CalisanId" class="form-select" required>
                    <option value="">Çalışan Seçin</option>

                    @foreach (var calisan in Model.Calisanlar)
                    {
                        <option value="@calisan.CalisanId">@calisan.Ad @calisan.Soyad</option>
                    }

                </select>
            </div>

            <!-- Randevu Tarihi -->
            <div class="mb-3">
                <label asp-for="Tarih" class="form-label">Randevu Tarihi</label>
                <input asp-for="Tarih" class="form-control" type="date" required />
            </div>

            <!-- Saat Seçimi -->
            <div class="mb-3">
                <label asp-for="Saat" class="form-label">Saat Seç</label>
                <select asp-for="Saat" class="form-select" required>
                    <option value="">Saat Seçin</option>

                </select>
            </div>

            <!-- Submit Butonu -->
            <button type="submit" class="btn btn-primary w-100">Randevu Al</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#IslemId").change(function () {
                var islemId = $(this).val();
                $("#CalisanId").empty().append('<option value="">Çalışan Seçin</option>');
                $("#Saat").empty().append('<option value="">Saat Seçin</option>');

                if (islemId) {
                    $.getJSON('/Randevu/GetCalisanlarByIslem', { islemId: islemId }, function (data) {
                        $.each(data, function (i, calisan) {
                            $("#CalisanId").append(<option value="${calisan.calisanId}">${calisan.ad} ${calisan.soyad}</option>);
                        });
                    });
                }
            });
/*
            $("#CalisanId").change(function () {
                var calisanId = $(this).val();
                $("#Saat").empty().append('<option value="">Saat Seçin</option>');

                if (calisanId) {
                    $.getJSON('/Randevu/GetCalisanSaatleri', { calisanId: calisanId }, function (data) {
                        $.each(data, function (i, saat) {
                            $("#Saat").append(<option value="${saat.saat}">${saat.saat}</option>);
                        });
                    });
                }
            });*/
        });
    </script>
</body>

</html>