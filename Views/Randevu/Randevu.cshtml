@model KuaforProjesi.Data.Randevu

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Randevu Al</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">

    <div class="container">
        <h2 class="text-center mb-4">Randevu Al</h2>
        <form asp-controller="Randevu" asp-action="RandevuAl" method="post">
            <div class="mb-3">
                <label asp-for="Islem" class="form-label">İşlem Seç</label>
                <select asp-for="Islem" class="form-select" required>
                    <option value="">İşlem Seçin</option>
                   @*@foreach (var islem in ViewBag.IslemListesi)
                    {
                        <option value="@islem">@islem</option>
                    } *@
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="CalisanId" class="form-label">Çalışan Seç</label>
                <select asp-for="CalisanId" class="form-select" required>
                    <option value="">Çalışan Seçin</option>
                  @*  @foreach (var calisan in Model.Calisanlar)
                    {
                        <option value="@calisan.CalisanId">@calisan.Ad @calisan.Soyad</option>
                    }*@
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="Tarih" class="form-label">Randevu Tarihi</label>
                <input asp-for="Tarih" class="form-control" type="date" required />
            </div>

            <div class="mb-3">
                <label asp-for="Saat" class="form-label">Saat Seç</label>
                <select asp-for="Saat" class="form-select" required>
                    <option value="">Saat Seçin</option>
                   @*@foreach (var calisanSaat in Model.CalisanSaatleri)
                    {
                        <option value="@calisanSaat.Saat">@calisanSaat.Saat</option>
                    }*@
                </select>
            </div>

            <button type="submit" class="btn btn-primary w-100">Randevu Al</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>