@model IEnumerable<KuaforProjesi.Data.Calisanlarimiz>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Çalışanlarımız</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <!-- Çalışanlarımız Başlığı -->
    <section class="py-5 bg-light">
        <div class="container">
            <!-- Çalışanlarımız Yazısı ve Arka Plan -->
            <div class="p-4 bg-dark text-white rounded-4 text-center mb-5">
                <h2 class="mb-0">Çalışanlarımız</h2>
            </div>
            
            <div class="row justify-content-center">
                @foreach (var calisan in Model)
                {
                    <div class="col-12 col-md-6 col-lg-4 mb-4">
                        <div class="card shadow text-center">
                            <div class="card-body">
                                <h4 class="card-title">@calisan.Ad @calisan.Soyad</h4>
                                <h6 class="card-subtitle text-muted mb-2">Uzmanlık: @calisan.UzmanlikAlani</h6>
                                <p class="card-text">
                                    <strong>Çalışma Saatleri:</strong> @calisan.calismaSaati<br>
                                    <strong>Yaptığı İşlemler:</strong><br>
                                    @if (calisan.IslemCalisanlar != null && calisan.IslemCalisanlar.Count > 0)
                                    {
                                        foreach (var islemCalisan in calisan.IslemCalisanlar)
                                        {
                                            <span>- @islemCalisan.Islem?.IslemAdi<br></span>
                                        }
                                    }
                                    else
                                    {
                                        <span>Belirtilmedi</span>
                                    }
                                </p>
                                <a href="/Randevu/Randevu" class="btn btn-primary">Randevu Al</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
