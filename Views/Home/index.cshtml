@using KuaforProjesi.Data
@{
    var hizmetler = ViewBag.Hizmetler as List<Islem>;
    var calisanlar = ViewBag.Calisanlar as List<Calisanlarimiz>;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HangiKuaför - Home</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
</head>
<body>

    @{
        if(TempData["Basarili"] != null && !string.IsNullOrEmpty(TempData["Basarili"].ToString()))
        {
            <div class="alert alert-success gecici" role="alert" style="margin: 10px;">@TempData["Basarili"]</div>
        }
    }
    <!-- Hero Section -->
   <section class="hero-section py-5">
    <div class="container text-center bg-dark text-white py-5 px-4 rounded-4 shadow">
        <h1 class="display-4">HangiKuaför'e Hoşgeldiniz</h1>
        <p class="lead">Güzellik ve bakımda profesyonel hizmet</p>
        <a href="#services" class="btn btn-primary btn-lg mt-3">Hizmetlerimizi Keşfedin</a>
    </div>
</section>

    <!-- Services Section -->
     <!-- Hizmetler Bölümü -->
    <section id="services" class="py-5">
        <div class="container">
            <h2 class="text-center mb-4">Hizmetlerimiz</h2>
            <div class="row">
                @foreach (var hizmet in hizmetler)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card border-0 shadow">
                            <div class="card-body text-center">
                                <h5 class="card-title">@hizmet.IslemAdi</h5>
                                <p class="card-text">Hizmet Fiyatı: @hizmet.fiyati TL</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Team Section -->
     <section id="team" class="bg-light py-5">
        <div class="container">
            <h2 class="text-center mb-4">Çalışanlarımız</h2>
            <div class="row">
                @foreach (var calisan in calisanlar)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card border-0 shadow text-center">
                            <img src="https://via.placeholder.com/150" class="card-img-top rounded-circle mx-auto mt-3" alt="@calisan.Ad @calisan.Soyad" style="width: 150px; height: 150px;">
                            <div class="card-body">
                                <h5 class="card-title">@calisan.Ad @calisan.Soyad</h5>
                                <p class="card-text">Uzmanlık: 
                                    @foreach (var islemCalisan in calisan.IslemCalisanlar)
                                    {
                                        @islemCalisan.Islem.IslemAdi
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
  <section class="py-5 bg-light" id="working-hours">
    <div class="container">
        <h2 class="text-center mb-4">Çalışma Saatlerimiz</h2>
        <div class="row text-center">
            <!-- Pazartesi -->
            <div class="col-6 col-md-3 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Pazartesi</h5>
                        <p class="card-text">09:00 - 19:00</p>
                    </div>
                </div>
            </div>
            <!-- Salı -->
            <div class="col-6 col-md-3 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Salı</h5>
                        <p class="card-text">09:00 - 19:00</p>
                    </div>
                </div>
            </div>
            <!-- Çarşamba -->
            <div class="col-6 col-md-3 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Çarşamba</h5>
                        <p class="card-text">09:00 - 19:00</p>
                    </div>
                </div>
            </div>
            <!-- Perşembe -->
            <div class="col-6 col-md-3 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Perşembe</h5>
                        <p class="card-text">09:00 - 19:00</p>
                    </div>
                </div>
            </div>
            <!-- Cuma -->
            <div class="col-6 col-md-3 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Cuma</h5>
                        <p class="card-text">09:00 - 19:00</p>
                    </div>
                </div>
            </div>
            <!-- Cumartesi -->
            <div class="col-6 col-md-3 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Cumartesi</h5>
                        <p class="card-text">10:00 - 17:00</p>
                    </div>
                </div>
            </div>
            <!-- Pazar -->
            <div class="col-6 col-md-3 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Pazar</h5>
                        <p class="card-text">Kapalı</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>