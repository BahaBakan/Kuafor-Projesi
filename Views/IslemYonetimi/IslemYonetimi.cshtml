@model IEnumerable<KuaforProjesi.Data.Islem>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>İşlem Yönetimi</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h1 class="mb-4">İşlem Yönetimi</h1>  

        <!-- Yeni İşlem Ekleme Formu -->
        <form asp-action="Ekle" method="post" class="mb-4">
            <div class="row mb-3">
                <div class="col">
                    <input type="text" name="IslemAdi" class="form-control" placeholder="İşlem Adı" required>
                </div>
                <div class="col">
                    <input type="number" name="Fiyati" class="form-control" placeholder="Fiyatı" required>
                </div>
            </div>
            <button type="submit" class="btn btn-success">Yeni İşlem Ekle</button>
        </form>

        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>İşlem Adı</th>
                    <th>Fiyatı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var islem in Model)
                {
                    <tr>
                        <td>@islem.IslemId</td>
                        <td>@islem.IslemAdi</td>
                        <td>@islem.fiyati</td>
                        <td>
                            <a asp-action="Guncelle" asp-route-id="@islem.IslemId" class="btn btn-primary btn-sm">Edit</a>
                            <form asp-action="Sil" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@islem.IslemId" />
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>