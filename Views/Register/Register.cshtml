<!DOCTYPE html>
@model Register 
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kayıt Ol</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        /* Sayfanın tamamını kapsayan ve dikeyde ortalayan kapsayıcı */
        .form-container {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }
    </style>
</head>
<body class="bg-light">

    <!-- Form Kapsayıcı -->
    <div class="form-container">
        <div class="card p-4 shadow" style="width: 100%; max-width: 400px;">
            <h2 class="text-center mb-4">Kayıt Ol</h2>
            <form asp-controller="Register" asp-action="Register" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label asp-for="Ad" class="form-label">Kullanıcı Adı</label>
                    <input asp-for="Ad" class="form-control" required>
                    <span asp-validation-for="Ad" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Eposta" class="form-label">Eposta</label>
                    <input asp-for="Eposta" class="form-control" type="email" required>
                    <span asp-validation-for="Eposta" class="text-danger"></span>
                </div>
                <div class="mb-3">
                   <label asp-for="Sifre" class="form-label">Şifre</label>
                    <input asp-for="Sifre" class="form-control" type="password" required>
                    <span asp-validation-for="Sifre" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Kayıt Ol</button>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
