@model IEnumerable<KuaforProjesi.Data.Randevu>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Randevu Yönetimi</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h1 class="mb-4">Randevu Yönetimi</h1>  

        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>İşlem Adı</th>
                    <th>Tarih</th>
                    <th>Saat</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var randevu in Model)
                {
                    <tr>
                        <td>@randevu.RandevuId</td>
                        <td>@randevu.IslemAdi</td>
                        <td>@randevu.Tarih.ToShortDateString()</td>
                        <td>@randevu.Saat</td>
                        <td>
                            <a asp-action="Guncelle" asp-route-id="@randevu.RandevuId" class="btn btn-primary btn-sm">Edit</a>
                            <form asp-action="Sil" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@randevu.RandevuId" />
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>