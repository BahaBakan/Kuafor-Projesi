
@model IEnumerable<KuaforProjesi.Data.Calisanlarimiz>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Çalışanlar Yönetimi</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h1 class="mb-4">Çalışanlar Yönetimi</h1>

        <!-- Yeni Çalışan Ekleme Formu -->
        <form asp-action="Ekle" method="post" class="mb-4">
            <div class="row mb-3">
                <div class="col">
                    <input type="text" name="Ad" class="form-control" placeholder="Ad" required>
                </div>
                <div class="col">
                    <input type="text" name="Soyad" class="form-control" placeholder="Soyad" required>
                </div>
                <div class="col">
                    <input type="text" name="UzmanlikAlani" class="form-control" placeholder="Uzmanlık Alanı" required>
                </div>
                <div class="col">
                    <input type="text" name="calismaSaati" class="form-control" placeholder="Çalışma Saati" required>
                </div>
            </div>
            <button type="submit" class="btn btn-success">Yeni Çalışan Ekle</button>
        </form>

        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Uzmanlık Alanı</th>
                    <th>Çalışma saati</th>
                    <th>Günlük kazanç</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var calisan in Model)
                {
                    <tr>
                        <td>@calisan.CalisanId</td>
                        <td>@calisan.Ad</td>
                        <td>@calisan.Soyad</td>
                        <td>@calisan.UzmanlikAlani</td> 
                        <td>@calisan.calismaSaati</td> 
                        <td>@calisan.GunlukKazanc</td>
                        <td> 
                            <a asp-action="Guncelle" asp-route-id="@calisan.CalisanId" class="btn btn-primary btn-sm">Edit</a> 
                            <form asp-action="Sil" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@calisan.CalisanId" />
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>